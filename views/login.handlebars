<div class="container">
    <img class='responsive' src="./assets/listening.jpeg" alt="listening">
    <div class="text-block">
      <h1 class="welcome"> WELCOME</h1>
      <h2 class="hooked">Let's get you hooked on a new podcast</h2>

    </div>

    <!-- Login -->
    <div class="columns is-multiline" id="card-container">
      <div class="column is-full spacer">
        <div class="text-block login-block logout-block">
          <p>Login</p>

          <div class="field">
            <p class="control">
              <input id="email-login" class="input" type="text" placeholder="Email">
            </p>
          </div>
          <div class="field">
            <p class="control">
              <input id="username-login" class="input" type="text" placeholder="Username">
            </p>
          </div>
          <div class="field">
            <p class="control">
              <input id="password-login" class="input" type="password" placeholder="Password">
            </p>
          </div>
          <div class="field">
            <p class="control">
              <button id="login-submit">
                Login
              </button>
            </p>
          </div>
        </div>

        &nbsp;&nbsp;
        <div class="columns is-multiline" id="card-container">
          <div class="column is-full spacer">
            <div class="text-block login-block logout-block" id="signup-block">
              <p>Sign up</p>
              <!-- Signup -->
              <div class="field">
                <p class="control">
                  <input class="input" id="email-signup" type="text" placeholder="Email">
                </p>
              </div>
              <div class="field">
                <p class="control">
                  <input class="input" id="username-signup" type="text" placeholder="Username">
                </p>
              </div>
              <div class="field">
                <p class="control">
                  <input class="input" id="password-signup" type="password" placeholder="Password">
                </p>
              </div>
              <div class="field">
                <p class="control">
                  <button id="signup-submit">
                    Sign-up
                  </button>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


</div>
</div>

